<div class="row" style="margin-top:10px;">
  <div class="col-xs-12">
    <div class="btn-group text-center" role="group" aria-label="...">
      <% @categories.each do |category| %>
        <a href="/region_links?category=<%= category %>" class="btn btn-default <%= "active" if params[:category] == category %>"><%= category %></a>
      <% end %>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-xs-12">
    <h3> <%= params[:category] %> </h3>
  </div>
  <% @region_links.each do |interval, interval_links| %>
    <div class="col-xs-6">
      <div class="panel panel-default">
        <div class="panel-heading"> <%= interval %> incoming </div>
        <div class="panel-body">
          <div class="google-map-canvas" id="<%= params[:category] %>.<%= interval %>.incoming">
          </div>
        </div>
      </div>
    </div>
    <div class="col-xs-6">
      <div class="panel panel-default">
        <div class="panel-heading"> <%= interval %> outgoing </div>
        <div class="panel-body">
          <div class="google-map-canvas" id="<%= params[:category] %>.<%= interval %>.outgoing">
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<script type="text/javascript">
  var regionLinks = <%= @region_links.to_json %>;
</script>
